{
  "name": "@gah/cli",
  "version": "1.0.6",
  "homepage": "https://github.com/gahjs/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/gahjs/core.git"
  },
  "description": "Generic Angular Host Tooling",
  "main": "./lib/public-api.js",
  "files": [
    "lib",
    "assets"
  ],
  "bin": {
    "gah": "./lib/index.js"
  },
  "scripts": {
    "prebuild": "del-cli lib",
    "postbuild": "cpy src/templates lib/templates && cpy ../README.md ./",
    "start": "yarn run build && yarn run global",
    "global": "yarn global add file:D:/git/@gahjs/core/cli",
    "lint": "yarn eslint ./src/**",
    "build": "yarn run prebuild && tsc -p . && yarn run postbuild",
    "format": "prettier -w . --ignore-path .gitignore"
  },
  "engines": {
    "node": ">=12.0"
  },
  "author": "LoaderB0T",
  "license": "MIT",
  "private": false,
  "prettier": "@awdware/prettier-config",
  "dependencies": {
    "@gah/shared": "^1.0.3",
    "awesome-logging": "0.2.8",
    "awilix": "^4.3.4",
    "chalk": "^4.1.1",
    "change-case": "^4.1.2",
    "commander": "^7.0.0",
    "comment-json": "^4.1.0",
    "compare-versions": "^3.6.0",
    "decompress": "^4.2.1",
    "decompress-targz": "^4.1.1",
    "deep-equal": "^2.0.5",
    "ejs": "^3.1.6",
    "enquirer": "^2.3.6",
    "figlet": "^1.5.0",
    "fs-extra": "^10.0.0",
    "fswin": "^3.21.107",
    "globby": "^11.0.4",
    "simple-git": "^2.40.0"
  },
  "devDependencies": {
    "@awdware/eslint-config-base": "^1.0.0",
    "@awdware/eslint-config-nodejs": "^1.0.0",
    "@awdware/prettier-config": "^0.0.2",
    "@types/decompress": "^4.2.3",
    "@types/deep-equal": "^1.0.1",
    "@types/ejs": "^3.0.6",
    "@types/figlet": "^1.5.1",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^16.4.3",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "cpy-cli": "^3.1.1",
    "del-cli": "^4.0.0",
    "eslint": "^7.29.0",
    "legally": "^3.5.10",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
